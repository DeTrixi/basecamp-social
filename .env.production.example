# ─────────────────────────────────────────────────────────
# Basecamp Social — Production Environment
# ─────────────────────────────────────────────────────────
# Copy to .env.production and fill in real values.
# Usage:
#   docker compose --env-file .env.production \
#     -f docker-compose.yml -f docker-compose.production.yml up -d
# ─────────────────────────────────────────────────────────

# ── PostgreSQL ──────────────────────────────────────────
POSTGRES_USER=basecamp
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=basecamp_social

# ── Redis ───────────────────────────────────────────────
REDIS_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# ── MinIO (S3-compatible) ──────────────────────────────
MINIO_ROOT_USER=CHANGE_ME
MINIO_ROOT_PASSWORD=CHANGE_ME_STRONG_PASSWORD
MINIO_API_PORT=9000
MINIO_BUCKET=basecamp-social

# ── API ────────────────────────────────────────────────
API_PORT=8080

# ── JWT ────────────────────────────────────────────────
JWT_SECRET=CHANGE_ME_TO_A_RANDOM_64_CHARACTER_STRING_MINIMUM
JWT_ISSUER=BasecampSocial
JWT_AUDIENCE=BasecampSocialApp
JWT_ACCESS_TOKEN_MINUTES=15
JWT_REFRESH_TOKEN_DAYS=30
