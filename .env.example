# ─────────────────────────────────────────────────────────
# Basecamp Social — Environment Variables
# ─────────────────────────────────────────────────────────
# Copy this file to .env and fill in the values:
#   cp .env.example .env

# ── PostgreSQL ──────────────────────────────────────────
POSTGRES_USER=basecamp
POSTGRES_PASSWORD=<your-postgres-password>
POSTGRES_DB=basecamp_social_dev
POSTGRES_PORT=5432

# ── Redis ───────────────────────────────────────────────
REDIS_PORT=6379

# ── MinIO (S3-compatible) ──────────────────────────────
MINIO_ROOT_USER=<your-minio-user>
MINIO_ROOT_PASSWORD=<your-minio-password>
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_BUCKET=basecamp-social-dev

# ── Seq (structured logging) ──────────────────────────
SEQ_INGESTION_PORT=5341
SEQ_UI_PORT=8082

# ── API ────────────────────────────────────────────────
API_PORT=5297

# ── JWT ────────────────────────────────────────────────
JWT_SECRET=<your-jwt-secret-at-least-64-characters>
JWT_ISSUER=BasecampSocial
JWT_AUDIENCE=BasecampSocialApp
JWT_ACCESS_TOKEN_MINUTES=15
JWT_REFRESH_TOKEN_DAYS=30
