{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/apps/server/src/BasecampSocial.Api/BasecampSocial.Api.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/apps/server/src/BasecampSocial.Api/BasecampSocial.Api.csproj"
            ],
            "problemMatcher": "$msCompile",
            "isBackground": true
        }
    ]
}